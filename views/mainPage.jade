extends layout

block content
    div.container
        form.form-signin
            h2.form-signin-heading
                |Please sign in
            label.sr-only(for="inputEmail")
                |Email address
            input.form-control#inputEmail(type="email" placeholder="Email address")
            input.form-control#inputPassword(placeholder="Password")
            div.checkbox
                label
                    input(value="remember-me" type="checkbox")
                    |Remember Me
            button.btn.btn-lg.btn-primary.btn-block(type="submit")
                |Sign in
    ul.nav.navbar-nav.navbar-right
        li
            a(href="#")
                i.fa.fa-home
                    |Home
            a(href="#about")
                i.fa.fa-shield
                    |about
            a(href="#contact")
                i.fa.fa-comment
                    |Contact
    div#main
        div(ng-view, page="page {{ pageClass }}")